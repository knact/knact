      <SplitPane dividerPositions="0.23" orientation="VERTICAL" VBox.vgrow="ALWAYS">
         <items>
            <HBox SplitPane.resizableWithParent="false">
               <children>
                  <StackedAreaChart fx:id="overviewChart" HBox.hgrow="ALWAYS">
                    <xAxis>
                      <NumberAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis side="LEFT" />
                    </yAxis>
                  </StackedAreaChart>
                  <GridPane>
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" />
                        <ColumnConstraints hgrow="SOMETIMES" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints vgrow="SOMETIMES" />
                        <RowConstraints vgrow="SOMETIMES" />
                        <RowConstraints vgrow="SOMETIMES" />
                        <RowConstraints vgrow="SOMETIMES" />
                        <RowConstraints vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label text="CPU" />
                        <Label text="RAM" GridPane.rowIndex="1" />
                        <Label text="Disk" GridPane.rowIndex="2" />
                        <Label text="Uptime" GridPane.rowIndex="3" />
                        <Label text="Load" GridPane.rowIndex="4" />
                        <Label fx:id="cpu" text="Label" GridPane.columnIndex="1" />
                        <Label fx:id="ram" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label fx:id="disk" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label fx:id="uptime" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label fx:id="load" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                     </children>
                  </GridPane>
               </children>
            </HBox>
            <TabPane tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Analysis/Metric">
                     <content>
                        <GridPane>
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <Label text="Label" />
                           </children>
                        </GridPane>
                     </content>
                  </Tab>
                <Tab text="Terminal">
                     <content>
                        <VBox>
                           <children>
                              <ToolBar prefHeight="40.0" prefWidth="200.0">
                                <items>
                                    <HBox>
                                       <children>
                                          <SplitMenuButton mnemonicParsing="false" text="SplitMenuButton">
                                            <items>
                                              <MenuItem mnemonicParsing="false" text="Action 1" />
                                              <MenuItem mnemonicParsing="false" text="Action 2" />
                                            </items>
                                          </SplitMenuButton>
                                       </children>
                                    </HBox>
                                </items>
                              </ToolBar>
                              <StackPane fx:id="terminalPane" VBox.vgrow="ALWAYS" />
                           </children>
                        </VBox>
                     </content>
                  </Tab>
                  <Tab text="Logs">
                     <content>
                        <SplitPane dividerPositions="0.3">
                           <items>
                              <TreeTableView fx:id="logs" SplitPane.resizableWithParent="false">
                                <columns>
                                  <TreeTableColumn fx:id="logPath" prefWidth="75.0" text="C1" />
                                  <TreeTableColumn fx:id="logSIze" prefWidth="75.0" text="C2" />
                                </columns>
                              </TreeTableView>
                              <StackPane fx:id="logPane" />
                           </items>
                        </SplitPane>
                     </content>
                  </Tab>
              </tabs>
            </TabPane>
         </items>
      </SplitPane>
   </children>
